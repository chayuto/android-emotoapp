<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="emotovate.com.emotoapp.manageDeviceMainFragment">

    <!-- TODO: Update  fragment layout -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to eMotoCell"
        android:id="@+id/btnConnect"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Test Info"
        android:id="@+id/btnTest1"
        android:layout_below="@+id/btnConnect"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GetStatus"
        android:id="@+id/btnTest2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnTest1"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
