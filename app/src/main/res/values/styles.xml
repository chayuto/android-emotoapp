<resources>

    <color name="custom_theme_color">#ff99cc33</color>
    <color name="white_theme_color">#fffdfdff</color>
    <color name="emotoColor_text_1">#ff0d1b0d</color>
    <color name="nav_draw_highlight_color">#ff99cc33</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:colorPrimary">@color/custom_theme_color</item>
        <item name="android:colorPrimaryDark">@color/custom_theme_color</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/custom_theme_color</item>
        <!-- Support library compatibility -->
        <item name="background">@color/custom_theme_color</item>
    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->


        <item name="android:windowBackground">@color/white_theme_color</item>
        <item name="android:colorBackground">@color/white_theme_color</item>


        <!--Action bar color-->
            <item name="android:actionBarStyle">@style/MyActionBar</item>
            <!-- Support library compatibility -->
            <item name="actionBarStyle">@style/MyActionBar</item>

        <!--List Selector-->
            <item name="android:listChoiceBackgroundIndicator">@drawable/apptheme_list_selector_holo_light</item>
            <item name="android:activatedBackgroundIndicator">@drawable/apptheme_activated_background_holo_light</item>

            <item name="android:listViewStyle">@style/ListViewAppTheme</item>
            <item name="android:listViewWhiteStyle">@style/ListViewAppTheme.White</item>
            <item name="android:spinnerItemStyle">@style/SpinnerItemAppTheme</item>
    </style>


    <style name="ListViewAppTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="ListViewAppTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemAppTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/emotoColor_text_1</item>
        <!--item name="android:typeface">monospace</item-->
        <item name="android:textColorHint">#ffd6d6d8</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


</resources>
